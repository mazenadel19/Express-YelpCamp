<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/styles.css" />
<div id="map" style="width: 100%; height: 500px"></div>
<div class="pb-5">
	<h1 class="pb-2 border-bottom mb-5">ALL Camps</h1>

	<div class="row row-cols-1 row-cols-md-2 g-4">
		<% for( let campground of campgrounds) { %>

		<div class="col">
			<div
				class="
					card card-cover
					h-100
					overflow-hidden
					text-white
					bg-dark
					rounded-5
					shadow-lg
				"
			>
				<% if (campground.images.length) { %>
				<div
					class="
						card
						h-100
						card-cover
						overflow-hidden
						text-white
						bg-dark
						rounded-5
						shadow-lg
					"
					style="background-image: url('<%=campground.images[0].url%>')"
				>
					<% } else{ %>
					<div
						class="
							card
							h-100
							card-cover
							overflow-hidden
							text-white
							bg-dark
							rounded-5
							shadow-lg
						"
						style="
							background-image: url('https://res.cloudinary.com/skywa1ker/image/upload/v1621939744/YelpCamp/ehvtazwtd9jyjha5nrrs.jpg');
						"
					>
						<% } %>
						<div
							class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1"
						>
							<a
								href="/campgrounds/<%=campground._id%>"
								class="text-light"
								style="text-decoration-color: dodgerblue"
							>
								<h2
									class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold card-text-shadow"
									style="font-size: 3rem; text-decoration-color: dodgerblue"
								>
									<%= campground.title %>
								</h2>
							</a>

							<ul
								class="
									d-flex
									flex-wrap
									list-unstyled
									mt-auto
									align-items-baseline
								"
							>
								<li
									class="
										me-auto
										d-flex
										justify-content-start
										align-items-center
									"
								>
									<img
										src="/icons/user.svg"
										width="32"
										height="32"
										class="rounded-circle border border-white bg-light"
									/>
									<span class="ms-2 card-text-shadow fw-bold">
										<%=campground.author.username%>
									</span>
								</li>
								<li class="ms-auto">
									<ul class="d-flex">
										<li class="d-flex align-items-center me-3">
											<img
												class="bi me-2"
												width="20em"
												height="25em"
												src="/icons/pinpoint.svg"
												alt=""
											/>
											<small class="card-text-shadow fw-bold">
												<%= campground.location%>
											</small>
										</li>
										<li class="d-flex align-items-center">
											<img
												class="bi me-2"
												width="20em"
												height="25em"
												src="/icons/calendar.svg"
												alt=""
											/>
											<small class="card-text-shadow fw-bold">3d</small>
										</li>
									</ul>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</div>

<script>
	const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
	const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}
</script>

<script src="/js/clusterMap.js"></script>
